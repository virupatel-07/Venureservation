   <!-- Contact Section Begin -->
   <section class="contact-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="contact-title">
                    <div class="section-title">
                        <span>A Memorable Event With Venue Reservation</span>
                        <h2>CUSTOMER BOOK HALL</h2>
                    </div>
                  
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <form method="post" name="form1" class="contact-form" action="/book_hall">
                    <div class="row">
                      
                        <div class="col-lg-12">
                         <br/><br/><br/>
                         Select From Date:
                            <input type="date" name="txtfdate" value="<%= fdate %>" readonly>
                        </div>
                        <div class="col-lg-12">
                            Select To Date:
                            <input type="date" name="txttdate" value="<%= tdate %>"  readonly>
                           
                        </div>
                        <div class="col-lg-12">
                            <select name="seltime" >
                                <option value="0">--Select Time Type--</option>
                                <option value="12hours">12 Hours</option>
                                <option value="24hours">24 Hours</option>
                            </select>
                        
                        </div>
                        <div class="col-lg-12">
                            
                            <button type="submit" name="btnbook" onclick="return validate();">BOOK HALL</button>
                            <input type="hidden" value="<%= hid %>" name="txthid" >
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-lg-6">
                
                    <img src="img/login1.png" alt="">
                    
                
            </div>
        </div>
    </div>
</section>
<!-- Contact Section End -->