                        <div class="col-lg-12">
                            <input type="text"  placeholder="Enter No of Sofas" name="txtsofas" value="<%= hitems[0].no_of_sofas %>" >
                        
                        </div>
                    </div>
               
            </div>
               <div class="col-lg-6">
                
                    <div class="row contact-form">
                        <div class="col-lg-12">
                            <input type="text"  placeholder="Enter Hall Capacity" name="txtcapacity" value="<%= hitems[0].capacity %>" >
                        
                        </div>
                       
                       
