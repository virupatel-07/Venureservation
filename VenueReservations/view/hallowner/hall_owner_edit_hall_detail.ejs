<section class="contact-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="contact-title">
                    <div class="section-title">
                        <span>A Memorable Event With Venue Reservation</span>
                        <h2>UPDATE HALL DETAIL</h2>
                    </div>
                  
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <form method="post" name="form1" class="contact-form" action="/update_hall_detail">
                    <div class="row">
                      
                        
                        <div class="col-lg-12">
                            <input type="text"  placeholder="Enter Hall Name" name="txthname" value="<%= hitems[0].hall_name %>">
                        
